{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
    .signup-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 1% auto;
        max-width: 70%;
        background: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-section {
        flex: 1;
        padding: 2px;
        margin-right:2%;
        margin-left:2%;
    }

    h1 {
        font-size: 2rem;
        margin-bottom: 2px;
        text-align: center;
    }

    .signup-form .form-group {
        margin-bottom: 10px;
    }

    .signup-form input {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
    }

    .signup-form input:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px 15px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .illustration-section {
        flex: 1;
        text-align: center;
        width: 100%;
        height: 65vh;
    }

    .illustration {
        width: 90%;
        height: auto;
        border-radius: 5px;
    }
</style>

<div class="signup-container">
    <div class="form-section">
        <h1>Créer un compte</h1>
        {{ form_start(form, { 'attr': {'class': 'signup-form'} }) }}
        <div class="form-group">
            {{ form_row(form.nom, { 'attr': {'placeholder': 'Votre nom'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.email, { 'attr': {'placeholder': 'Votre email'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.telephone, { 'attr': {'placeholder': 'Votre téléphone'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.rue, { 'attr': {'placeholder': 'Votre rue'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.ville, { 'attr': {'placeholder': 'Votre ville'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.codePostal, { 'attr': {'placeholder': 'Code postal'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.password, { 'attr': {'placeholder': 'Mot de passe'} }) }}
        </div>
        <div class="form-group">
            {{ form_row(form.submit, { 'attr': {'class': 'btn btn-primary btn-block'} }) }}
        </div>
        {{ form_end(form) }}
    </div>
    <div class="illustration-section">
        <img src="{{ asset('img/categories/cat-3.jpg') }}" alt="Illustration" class="illustration">
    </div>
</div>
{% endblock %}

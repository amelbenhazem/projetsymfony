{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>MotDePasse</th>
                <th>Telephone</th>
                <th>Rue</th>
                <th>Ville</th>
                <th>CodePostal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for User in Users %}
            <tr>
                <td>{{ User.id }}</td>
                <td>{{ User.nom }}</td>
                <td>{{ User.email }}</td>
                <td>{{ User.motDePasse }}</td>
                <td>{{ User.telephone }}</td>
                <td>{{ User.rue }}</td>
                <td>{{ User.ville }}</td>
                <td>{{ User.codePostal }}</td>
                <td>
                    <a href="{{ path('app_User_show', {'id': User.id}) }}">show</a>
                    <a href="{{ path('app_User_edit', {'id': User.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_User_new') }}">Create new</a>
{% endblock %}
